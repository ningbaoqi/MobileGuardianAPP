<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/focused_text_margin"
    >
    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_update_setting"
        android:textColor="@color/black"
        android:textSize="@dimen/splash_app_version_size"
        />
    <TextView
        android:id="@+id/setting_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_title"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/focused_text_margin"
        android:textSize="@dimen/settings_content_size"
        />
    <CheckBox
        android:id="@+id/cb_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:layout_marginTop="@dimen/focused_text_margin"
        android:layout_below="@id/setting_desc"
        android:background="@color/gray"
        />
</RelativeLayout>