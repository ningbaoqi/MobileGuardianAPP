<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_13_dp"
        android:layout_marginTop="@dimen/margin_13_dp"
        android:text="12345678000"
        android:textColor="@color/black"
        android:textSize="@dimen/home_title_textsize" />

    <TextView
        android:id="@id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_number"
        android:layout_marginLeft="@dimen/margin_13_dp"
        android:layout_marginTop="@dimen/margin_13_dp"
        android:text="@string/phone_intercept"
        android:textSize="@dimen/splash_app_version_size" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/margin_13_dp"
        android:background="@mipmap/ic_delete_btn" />
</RelativeLayout>